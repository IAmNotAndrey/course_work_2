@model MusicSchoolAsp.Models.ViewModels.LoginViewModel

@{
	ViewData["Title"] = "Login Page";
}

<div class="container">
	<div class="row justify-content-center align-items-center" >
		<div class="col-lg-6 col-md-8">
			<div class="card">
				<div class="card-body">
					<h1 class="card-title text-center display-4">Вход в аккаунт</h1>

					@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
					{
						@Html.AntiForgeryToken()

						<div class="form-group">
							@Html.LabelFor(m => m.Login, htmlAttributes: new { @class = "h5" })
							@Html.TextBoxFor(m => m.Login, new { @class = "form-control form-control-lg", required = "true" })
							@Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })
						</div>

						<div class="form-group">
							@Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "h5" })
							@Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", required = "true" })
							@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
						</div>

						<div class="form-group">
							<input type="submit" value="Войти" class="btn btn-primary btn-lg btn-block" />
							<a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-lg btn-block">Отмена</a>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>
