@model MusicSchoolEF.Models.Db.Group

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали</h1>

<div>
    <h4>Группа</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

<div>
    <h4>Ученики</h4>
    <ul>
        @foreach (var student in Model.Students)
        {
            <li>@student.FullName</li>
        }
    </ul>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Name">Редактировать</a> |
    <a asp-action="Index">Назад</a>
</div>
