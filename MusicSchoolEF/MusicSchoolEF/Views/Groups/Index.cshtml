@model IEnumerable<MusicSchoolEF.Models.Db.Group>

@{
    ViewData["Title"] = "Главная";
}

<h1>Главная</h1>

<p>
    <a asp-action="Create">Создать группу</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Изменить</a>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Детали</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
