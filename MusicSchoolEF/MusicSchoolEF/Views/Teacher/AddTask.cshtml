@using MusicSchoolEF.Models.ViewModels;
@model TeacherTaskAddViewModel

@{
	ViewData["Title"] = "Task Adding Page";
}

<!-- Форма для редактирования задания -->
<div id="editFormContainer">
	@using (Html.BeginForm("AddTask", "Teacher", FormMethod.Post))
	{
		<!-- Защита от подделки межсайтовых запросов -->
		@Html.AntiForgeryToken()

		@Html.HiddenFor(m => m.ParentId)

		<div class="form-group">
			@Html.LabelFor(m => m.Name)
			@Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "node-name"})
			@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Description)
			@Html.TextAreaFor(m => m.Description, new { @class = "form-control", @id = "node-description" })
			@Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Priority)
			@Html.TextAreaFor(m => m.Priority, new { @class = "form-control", @id = "node-description" })
			@Html.ValidationMessageFor(m => m.Priority, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			<input type="submit" value="Добавить" class="btn btn-primary" />
			<a href="@Url.Action("Tasks", "Teacher")" class="btn btn-secondary">Отмена</a>
		</div>
	}
</div>
