@using MusicSchoolEF.Models.Defaults;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tree.css" />
    <link rel="stylesheet" href="~/css/list.css" /> <!-- Стили списков -->
    <link rel="stylesheet" href="~/css/tristate.css" /> <!-- Стили tristate-checkBox -->
    <!-- Ссылка на библиотеку иконок (Font Awesome) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script> <!-- jQuery -->
    <script src="~/js/tree.js"></script> <!-- Отображение древовидного списка -->
    <script src="~/js/list_element_select.js"></script> <!-- Обработка нажатия по элементу списка -->

    <title>@ViewData["Title"]</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MSApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Домашняя</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Конфиденциальность</a>
                        </li>
                        @if (User.Identity!.IsAuthenticated)
                        {
                            var userId = Context.Request.Cookies["UserId"];

                            if (User.IsInRole(Roles.Student))
                            {
                                <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Index", "Student", new { id = userId })">Главная</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Tasks", "Student", new { id = userId })">Занятия</a></li>
                            }
                            else if (User.IsInRole(Roles.Teacher))
                            {
                                <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Index", "Teacher", new { id = userId })">Главная</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Tasks", "Teacher", new { id = userId })">Занятия</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("TaskAssessment", "Teacher", new { id = userId })">Оценка занятий</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("TaskAssignment", "Teacher", new { id = userId })">Назначение занятий</a></li>
                            }
                            else if (User.IsInRole(Roles.Admin))
                            {
                                <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Index", "Admin", new { id = userId })">Главная</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Index", "Groups")">Группы</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Index", "Users")">Пользователи</a></li>
                            }

                            <li class="nav-item ml-auto">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Выход</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ml-auto">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Вход</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>
